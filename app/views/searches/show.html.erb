<!-- <div style='float:left;'> -->
<div class='row'>
  <div class='seven columns'>
    <img src='<%= @photo.url %>' name='<%= @photo.id %>' style='border:5px solid #000' />
  </div>
  <div class="five columns">
    <div><h2><%= @photo.title %></h2></div>
    <div style="background-color:lightblue;">Tags</div>
    <div style='padding:10px;'>
    <% @tags.each do|tag| %>
      <%= tag %>
    <% end %>
    </div>
    <%= form_tag search_path, :comment=>'comment', :photo_id=>@photo.id %>
      <%= hidden_field_tag 'photo_id', @photo.id %>
      <%= hidden_field_tag 'tags', @tags %>
      <%= text_field_tag "comment", nil, :placeholder=>"Enter Your Comments here" %>
        <div class='button-bar'>
        <ul class='button-group'>
          <li><%= submit_tag "Like", {:method=>'put', :status=>'like', :tags=>@tags, :photo_id=>@photo.id, :class=>'button'} %></li>
          <li><%= submit_tag "Dislike",{ :method=>'put', :status=>'dislike', :tags=>@tags, :photo_id=>@photo.id, :class=>'button alert'} %></li>
        </ul>
      </div>
  </div>
</div>



